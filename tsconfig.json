{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "./src",
    "noEmit": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types",
      "types",
    ],
    "types": [
      "jquery",
      "foundry",
      "pf2e"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
  },
  "include": [
    "./src/**/*",
  ],
  "files": [
    "./src/index.ts"
  ],
}